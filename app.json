{
  "expo": {
    "name": "Aledo Inventarios",
    "slug": "inventario-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/codigo-de-barras.png",
    "scheme": "inventariorn",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "La cámara se utiliza para escanear códigos de barras durante el inventario."
      }
    },
    "android": {
      "package": "com.aledo.inventarios",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/codigo-de-barras.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "36ece6cf-b4a9-422f-9193-d58825a70215"
      }
    }
  }
}
